<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= pageTitle %> | Ingredient: <%= ingredientData.name %></title>
  <%- include("partials/headGenericElements.ejs",{hasTables: true, hasDates: true}) %>
</head>

<body class="doodle">
  <%- include("partials/header.ejs",{highlightLink: "ingredients"}) %>

  <main>
    <div class="item-details-title">
      <h2><%= ingredientData.name %></h2>
      <%- include("partials/isProtectedSymbol.ejs", {is_protected: ingredientData.is_protected}) %>
    </div>

    <div class="item-details-nav">
      <a href="/ingredients"><span class="icon icon-back"></span>All Ingredients</a>
      <%- include("partials/itemActions.ejs", {baseRoute: "/ingredients", id: ingredientData.id, showRestock: true}) %>
    </div>

    <%- include("partials/ingredientDetailsTable.ejs", ingredientData) %>

    <section>
      <h3>Pizzas using this Ingredient: <%= ingredientData?.pizzas.length || 0 %></h3>
      <%- include("partials/pizzasBriefTable.ejs", {pizzasBriefData: ingredientData.pizzas}) %>
    </section>

    <section>
      <h3>Categories Rules</h3>
      <%- include("partials/categoriesPerIngredientTable.ejs", ingredientData) %>
    </section>

    <%- include("partials/dateInfoP.ejs", ingredientData) %>
  </main>

  <%- include("partials/creditFooter.ejs") %>
</body>

</html>
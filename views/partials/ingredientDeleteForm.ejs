<%_ const postUrl = `/ingredients/${data.id}/delete` _%>
<form action=<%= postUrl %> method="POST">
  <p>Are you sure you want to delete this ingredient?</p>
  <p>It will be removed from associated pizzas, and any category rule tied to it will be deleted, too.</p>
  <%- include("checkbox.ejs", {name: "deleteAssociatedPizzas", id: "delete_associated_pizzas", checked: locals.data?.deleteAssociatedPizzas, label: "Delete the associated pizzas too." }) _%>
  <%- include("protectedItem.ejs") _%>
  <fieldset>
    <legend>Pizzas using this ingredient</legend>
    <%- include("protectedList.ejs", {list: data.pizzas, protectedValues: data.protected_pizzas}) _%>
  </fieldset>
  <%- include("formActions.ejs", {fallbackUrl: "/ingredients",label: "DELETE"}) _%>
  </div>
</form>
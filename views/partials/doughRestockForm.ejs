<%_ 
const postUrl = `/doughs/${data.id}/restock`;
const maxUnitsToRestock = Math.max(0, parseInt(process.env.STOCK_MAX) - data.stock); 
_%>
<form action=<%= postUrl %> method="POST">
  <p>This dough currently has <strong><%= data.stock %> units</strong> in stock.</p>
  <fieldset>
    <legend>Add to stock</legend>
    <%- include("input.ejs", {type: "number", value: 1000, name: "unitsToRestock", label: "Units", min: 1, max: maxUnitsToRestock, step: 1, required: true}) _%>
  </fieldset>
  <%- include("formActions.ejs", {fallbackUrl: "/doughs",label: "RESTOCK"}) _%>
  </div>
</form>